<Alloy>
    <Window id="peekpop" title="Peek and Pop">
        <Button id="button"/>
    </Window>
    <Window id="detailWin">
        <PreviewContext id="context" onPop="pop">
        <Preview>
            <View id="previewView">
                <Label id="detailText"/>
            </View>
        </Preview>
        <Actions>
            <PreviewAction id="actionTitle" onClick="alertActionTitle" ></PreviewAction>
            <PreviewActionGroup id="actionGroup">
                <PreviewAction id="action" onClick="alertAction"></PreviewAction>
                <PreviewAction id="subAction" onClick="alertSubAction"></PreviewAction>
            </PreviewActionGroup>
        </Actions>
        <Button id="buttonBack" onClick="goBack"/>
        </PreviewContext>
    </Window>
</Alloy>
